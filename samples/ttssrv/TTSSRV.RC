    CONTROL "Environment:", -1, "static", SS_LEFT | WS_CHILD, 5, 92, 115, 8
    CONTROL "", IDD_ABOUT_VERSION_OS, "static", SS_LEFT | WS_CHILD, 30, 102, 145, 20

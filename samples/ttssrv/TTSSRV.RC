    CONTROL "", IDD_ABOUT_REG_INSTALLER, "static", SS_LEFT | WS_CHILD, 30, 72, 145, 20
    CONTROL "", IDD_ABOUT_REG_COMPANY, "static", SS_LEFT | WS_CHILD, 30, 82, 145, 20
